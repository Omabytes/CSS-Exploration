//variables
bgc = #57585f

html
    background: bgc

.bookshelf
    position: relative
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr))
    grid-auto-rows: 150px
    grid-auto-flow: dense

.books
    background-color: orange
    border: 3px solid bgc

.book1
    grid-row: span 2
    font-size: 0

.book2
    grid-row: span 3
    grid-column: span 2

.book3
    grid-row: span 1

.book4
    grid-row: span 4


.ball
    background: url("./assets/bouncy-ball.gif") center no-repeat
    border: 3px solid bgc
    grid-row: span 2
    grid-column: span 2
    




